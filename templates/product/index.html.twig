{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div style="margin-left: 15%; width: 100%;">
    <h2>Liste de produits</h2>
    <div class="row col-9">
    {% for product in products %}
        <div class="card" style="width: 18rem; margin: 10px; border-radius: 50px;">
  <div class="card-body">
    <h5 class="card-title">{{ product.name }}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{ product.createdAt | date('d/m/Y') }}</h6>
    <h6 class="card-subtitle mb-2 text-muted">{{ product.price }} â‚¬</h6>
    <p class="card-text">{{ product.description|slice(0, 299) }}...</p>
    <a href="{{ path('product.show', {id : product.id}) }}" class="card-link">Voir plus</a>
  </div>
</div>
    {% endfor %}
    </div>
</div>
{% endblock %}
